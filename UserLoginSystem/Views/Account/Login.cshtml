@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/select2/select2.min.css">
    <link rel="stylesheet" href="~/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/favicon.png">
    <style>
        span{
            color:red
        }
    </style>
</head>
<body>
    <div class="col-md-6 grid-margin stretch-card ">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" action="/Account/Login">
                    <div style="color:red">
                        @Html.ValidationMessage("Error")
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1" asp-for="@Model.UserName"></label>
                        <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Username" name="UserName">
                        <span asp-validation-for="@Model.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" asp-for="@Model.Password">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
                        <span asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" asp-for="@Model.RememberMe" name="RememberMe">
                            Remember me
                            <i class="input-helper"></i>
                            <span asp-validation-for="@Model.RememberMe"></span>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                </form>

            </div>
        </div>
    </div>
</body>
</html>



